{
    "version": 1,
    "schedule": {
        "type": "simple",
        "interval": "1s"
    },
    "workflow": {
        "collect": {
            "metrics": {
                "/staples/*": {}
            },
            "config": {
                "/staples/procfs/procstat":{
                    "files":"/tmp/snap.pid:coolio,/tmp/syslog.pid"
                }
            },
                "publish": [
                    {
                        "plugin_name": "file",
                        "config": {
                            "file": "/tmp/snap_procstat_file.out"
                        }
                    }
                ]
        }
    }
}
